#!/bin/sh
# MetaGraph pre-push hook - Comprehensive validation before sharing
# This hook runs before pushing to ensure shared code meets extreme quality standards

set -eu

# Import shared utilities
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT"
. ./scripts/mg.sh

echo "ğŸš€ Running pre-push validation..."

# Build the project first to ensure we're testing current code
echo "ğŸ”¨ Building project..."
if ! cmake --build build --parallel; then
    mg_red "âŒ Build failed"
    exit 1
fi

# Full static analysis
echo "ğŸ” Running comprehensive static analysis..."

if ! ./scripts/run-clang-tidy.sh; then
    mg_red "âŒ Static analysis failed"
    exit 1
fi

# Security scan
echo "ğŸ›¡ï¸ Running security audit..."
if ! ./scripts/security-audit.sh; then
    mg_red "âŒ Security audit failed"
    exit 1
fi

# Full test suite
if [ -d "build" ]; then
    echo "ğŸ§ª Running full test suite..."
    if ! make -C build test; then
        mg_red "âŒ Test suite failed"
        exit 1
    fi

    # Memory leak detection if ASan is available
    echo "ğŸ§ª Checking for memory leaks..."
    if [ -f "build/bin/mg_tests" ]; then
        if ! ASAN_OPTIONS="abort_on_error=1:detect_leaks=1" build/bin/mg_tests; then
            mg_red "âŒ Memory leak detected"
            exit 1
        fi
    fi
fi

# Performance regression check
if [ -d "benchmarks" ]; then
    echo "ğŸ“Š Running performance regression check..."
    if ! ./scripts/profile.sh --check-regression; then
        mg_yellow "âš ï¸ Performance regression detected (non-blocking)"
    fi
fi

mg_green "âœ… All pre-push checks passed!"
mg_green "ğŸ‰ Code is ready for sharing - maintaining extreme quality standards!"
