#!/bin/sh
# MetaGraph pre-push hook - Comprehensive validation before sharing
# This hook runs before pushing to ensure shared code meets extreme quality standards

set -eu

# Import shared utilities
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT"
. ./scripts/mg.sh

echo "ğŸš€ Running pre-push validation..."

# Build the project first to ensure we're testing current code
echo "ğŸ”¨ Building project..."
if ! cmake --build build --parallel; then
    mg_red "âŒ Build failed"
    exit 1
fi

# Full static analysis
echo "ğŸ” Running comprehensive static analysis..."

if ! ./scripts/run-clang-tidy.sh; then
    mg_red "âŒ Static analysis failed"
    exit 1
fi

# Security scan
echo "ğŸ›¡ï¸ Running security audit..."
if ! ./scripts/security-audit.sh; then
    mg_red "âŒ Security audit failed"
    exit 1
fi

# Full test suite
if [ -d "build" ]; then
    echo "ğŸ§ª Running full test suite..."
    if ! make -C build test; then
        mg_red "âŒ Test suite failed"
        exit 1
    fi

    # Memory leak detection if ASan is available
    echo "ğŸ§ª Checking for memory leaks..."
    if [ -f "build/bin/mg_tests" ]; then
        if ! ASAN_OPTIONS="abort_on_error=1:detect_leaks=1" build/bin/mg_tests; then
            mg_red "âŒ Memory leak detected"
            exit 1
        fi
    fi
fi

# Performance regression check
if [ -d "benchmarks" ] || [ -f "build/bin/mg_benchmarks" ]; then
    echo "ğŸ“Š Running performance regression check..."
    
    # Check if baseline performance data exists
    if [ ! -f "performance-baseline.txt" ]; then
        mg_red "âŒ No performance baseline data found"
        
        # Only prompt in interactive mode
        if mg_is_interactive; then
            if mg_prompt "Would you like to capture baseline performance data now?"; then
                echo "Capturing baseline performance data..."
                if ./scripts/profile.sh timing; then
                    mv timing-analysis.txt performance-baseline.txt
                    mg_green "âœ… Baseline performance data captured"
                else
                    mg_red "âŒ Failed to capture baseline data"
                    exit 1
                fi
            else
                mg_red "âŒ Cannot proceed without performance baseline"
                echo "Run: ./scripts/profile.sh timing && mv timing-analysis.txt performance-baseline.txt"
                exit 1
            fi
        else
            mg_red "âŒ No performance baseline data (non-interactive mode)"
            echo "Run: ./scripts/profile.sh timing && mv timing-analysis.txt performance-baseline.txt"
            exit 1
        fi
    else
        # Run timing analysis and compare with baseline
        if ! ./scripts/profile.sh timing; then
            mg_red "âŒ Failed to run performance analysis"
            exit 1
        fi
        
        # Compare with baseline - would do statistical analysis in production
        echo "Comparing with baseline performance..."
        if ! diff -u performance-baseline.txt timing-analysis.txt > performance-diff.txt 2>&1; then
            mg_yellow "âš ï¸ Performance differences detected (review performance-diff.txt)"
            # For now, don't fail on performance differences, just warn
        fi
    fi
fi

mg_green "âœ… All pre-push checks passed!"
mg_green "ğŸ‰ Code is ready for sharing - maintaining extreme quality standards!"
